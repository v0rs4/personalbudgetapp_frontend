{
  "parser": "babel-eslint",
  "rules": {
    "strict": 0,
    "indent": [2,2],
    "quotes": [2,"single"],
    "linebreak-style": [2,"unix"],
    "semi": [2,"always"],
    "no-console": 0
  },
  "env": {
    "es6": true,
    "browser": true
  },
  "extends": "eslint:recommended",
  "ecmaFeatures": {
    "modules": true,
    "jsx": true,
    "experimentalObjectRestSpread": true
  },
  "plugins": [
    "react"
  ],
  "settings": {
    "import/parser": "babel-eslint",
    "import/resolve": {
      "moduleDirectory": ["node_modules", "app"]
    }
  },
  "globals": {
    "CONFIG": true
  }
}
